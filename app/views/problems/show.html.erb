<div class="probs">
<h4><%= @problem.user.to_s %> has a problem:
<div class="text"><h5><%= @problem.text %></h5></div>
<h3>Here's what I've tried so far:</h3>
<div class="text"><h5><%= @problem.tried %></h5></div>
<br><br>
<% if @problem.user == current_user %>
    Has your problem been resolved?
    <i class="fa fa-check fa-2x"></i><%= link_to 'Resolve', problem_resolve_path(@problem.id),remote: true, method: :delete, :class => "resolve" %>
<% end %>
<h4><%= pluralize(@problem.notes.count, "Note") %></h4>

<div id="notes">
  <%= render @notes %>
</div>

<h4>Add a note to <%= @problem.user.to_s %>'s problem:</h4>
<%= form_for ([@problem, @problem.notes.build]), remote:true  do |f| %>
  <div class="row">
    <div class="small-12 columns">
      <%= f.text_area :text, class: 'field_label' %><br>
      <div class="actions">
        <%= f.button :submit, class: "radius small" %> <br>
	  	  </div>
	    </div>
	</div>
</div>
<% end %>
</div>


